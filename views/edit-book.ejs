<% layout('layout') %> <!-- Use layout as the base -->

<h2>Edit Book</h2>
<form action="/edit/<%= book.id %>" method="POST">
    <label for="title">Title:</label>
    <input type="text" name="title" id="title" value="<%= book.title %>" required>
    <br>
    <label for="author">Author:</label>
    <input type="text" name="author" id="author" value="<%= book.author %>" required>
    <br>
    <label for="rating">Rating:</label>
    <input type="number" name="rating" id="rating" min="1" max="5" value="<%= book.rating %>" required>
    <br>
    <label for="notes">Notes:</label>
    <textarea name="notes" id="notes"><%= book.notes %></textarea>
    <br>
    <label for="date_read">Date Read:</label>
    <input type="date" name="date_read" id="date_read" value="<%= book.date_read %>" required>
    <br>
    <label for="isbn">ISBN:</label>
<input type="text" name="isbn" id="isbn" value="<%= book ? book.isbn : '' %>">
<br>
    <button type="submit">Update Book</button>
</form>
